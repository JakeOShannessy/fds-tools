<?xml version='1.0' encoding='UTF-8'?>
<?define ProductVersion = "1.9.13"?>
<?define ProductUpgradeCode = "18709979-23a5-45d7-a7f3-1b3fedb0f653"?>

<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'>
    <Product Name='FDS Tools $(var.ProductVersion)'
             Id='*'
             UpgradeCode="$(var.ProductUpgradeCode)"
             Language='1033'
             Version='$(var.ProductVersion)'
             Manufacturer='Jake'>
        <Package Id='*'
                 Keywords='Installer'
                 Description="FDS Tools Installer"
                 Comments='Installs the executable and provides QuickChart in context menu on .smv files.'
                 Manufacturer='Jake'
                 InstallerVersion='100'
                 Languages='1033'
                 Compressed='yes' />
        <Condition Message="You need to be an administrator to install this product.">Privileged</Condition>
        <Media Id='1' Cabinet='media1.cab' EmbedCab='yes' />
        <Property Id='DiskPrompt' Value="FDS Tools Suite Installer" />
        <Upgrade Id="$(var.ProductUpgradeCode)">
            <UpgradeVersion Minimum="$(var.ProductVersion)" OnlyDetect="yes" Property="NEWERVERSIONDETECTED"/>
            <UpgradeVersion Minimum="0.0.0" Maximum="$(var.ProductVersion)" IncludeMinimum="yes" IncludeMaximum="no" Property="OLDERVERSIONBEINGUPGRADED"/>
        </Upgrade>
        <Condition Message="A newer version of this software is already installed.">NOT NEWERVERSIONDETECTED</Condition>
        <Directory Id='TARGETDIR' Name='SourceDir'>
            <Directory Id='ProgramFilesFolder' Name='PFiles'>
                <Directory Id='Fireng' Name='Fireng'>
                    <Directory Id='INSTALLDIR' Name='FDS Tools $(var.ProductVersion)'>
                        <Directory Id='BINDIR' Name='bin'>
                            <Component Id='QuickMon' Guid='1ab03b30-4375-4d2d-9dcc-56d139bc6943'>
                                <File Id='QuickMonEXE' Name='FDSQuickMon.exe' Source='dist/FDSQuickMon.exe' KeyPath='yes'>
                                </File>
                                <!-- <RegistryKey Id='SMVFileTypeReg' Root='HKLM' Key='SOFTWARE\Classes\.smv' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Value="smvDoc"/>
                                </RegistryKey> -->
                                <RegistryKey Id='SMVFileTypeRegOther' Root='HKLM' Key='SOFTWARE\Classes\SystemFileAssociations\.smv\Shell\QuickChart\Command' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Value="&quot;[BINDIR]\FDSQuickMon.exe&quot; &quot;%1&quot;"/>
                                </RegistryKey>
                                <!-- <RegistryKey Id='SMVFileTypeNameReg' Root='HKLM' Key='SOFTWARE\Classes\smvDoc' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Value="Smokeview File"/>
                                </RegistryKey> -->
                                <!-- <RegistryKey Id='QuickMonContextMenuReg' Root='HKLM' Key='SOFTWARE\Classes\smvDoc\Shell\QuickChart\command' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Value="&quot;[BINDIR]\FDSQuickMon.exe&quot; &quot;%1&quot;"/>
                                </RegistryKey> -->
                            </Component>
                            <!-- <Component Id='DetAct' Guid='39230750-a65f-4768-87bd-4ad212640dc6'>
                                <File Id='DetActEXE' Name='DetectionActivation.exe' Source='FDSUtilities/dist/build/DetectionActivation/DetectionActivation.exe' KeyPath='yes'>
                                </File>
                            </Component> -->
                            <Component Id='FuteComponent' Guid='e347a522-cde9-4228-a6cf-cc210f31cf15'>
                                <File Id='FuteEXE' Name='fute.exe' Source='dist/fute.exe' KeyPath='yes'>
                                </File>
                                <!-- <RegistryKey Id='FDSFileTypeReg' Root='HKLM' Key='SOFTWARE\Classes\.fds' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Value="fdsDoc"/>
                                </RegistryKey> -->
                                <RegistryKey Id='FDSFileTypeRegOther' Root='HKLM' Key='SOFTWARE\Classes\SystemFileAssociations\.fds\Shell\FDSVerification\Command' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Value="&quot;[BINDIR]\fute.exe&quot; verify-input &quot;%1&quot; --show"/>
                                </RegistryKey>
                                <!-- <RegistryKey Id='FDSFileTypeRegCommand' Root='HKLM' Key='SOFTWARE\Classes\.fds\Shell\FDSVerification\command' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Value="&quot;[BINDIR]\FDSVerification.exe&quot; &quot;%1&quot;"/>
                                </RegistryKey> -->
                                <!-- <RegistryKey Id='FDSFileTypeRegOther' Root='HKLM' Key='SOFTWARE\Windows\CurrentVersion\Explorer\FileExts\.fds\UserChoice' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Name="ProgId" Value="fdsDoc"/>
                                </RegistryKey> -->
                                <!-- <RegistryKey Id='FDSFileTypeNameReg' Root='HKLM' Key='SOFTWARE\Classes\fdsDoc' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Value="FDS Input File"/>
                                </RegistryKey> -->
                                <!-- <RegistryKey Id='FDSVerificationContextMenuReg' Root='HKLM' Key='SOFTWARE\Classes\fdsDoc\Shell\FDSVerification\command' ForceDeleteOnUninstall="yes">
                                    <RegistryValue Type='string' Value="&quot;[BINDIR]\fute.exe&quot; verify-input &quot;%1&quot; &#8211;&#8211;show"/>
                                </RegistryKey> -->
                            </Component>
                            <Component Id='CommonRender' Guid='ec39446c-f8ef-4fbf-a75f-8bc07c87dce1'>
                                <File Id='libcairo' Name='libcairo-2.dll' Source='lib64/libcairo-2.dll' KeyPath='yes'>
                                </File>
                                <File Id='libfontconfig' Name='libfontconfig-1.dll' Source='lib64/libfontconfig-1.dll'>
                                </File>
                                <File Id='libfreetype' Name='libfreetype-6.dll' Source='lib64/libfreetype-6.dll'>
                                </File>
                                <File Id='libiconv' Name='libiconv-2.dll' Source='lib64/libiconv-2.dll'>
                                </File>
                                <File Id='liblzma' Name='liblzma-5.dll' Source='lib64/liblzma-5.dll'>
                                </File>
                                <File Id='libpixman' Name='libpixman-1-0.dll' Source='lib64/libpixman-1-0.dll'>
                                </File>
                                <File Id='libpng' Name='libpng15-15.dll' Source='lib64/libpng15-15.dll'>
                                </File>
                                <File Id='libxml2' Name='libxml2-2.dll' Source='lib64/libxml2-2.dll'>
                                </File>
                                <File Id='zlib1' Name='zlib1.dll' Source='lib64/zlib1.dll'>
                                </File>
                            </Component>
                        </Directory>
                    </Directory>
                </Directory>
            </Directory>
        </Directory>
        <InstallExecuteSequence>
            <RemoveExistingProducts After="InstallValidate"/>
        </InstallExecuteSequence>
        <Feature Id='QuickMonitor' Level='1'>
            <ComponentRef Id='QuickMon' />
            <ComponentRef Id='CommonRender' />
        </Feature>
        <!-- <Feature Id='DetectionActivation' Level='1'>
            <ComponentRef Id='DetAct' />
        </Feature> -->
        <!-- <Feature Id='FDSVerification' Level='1'>
            <ComponentRef Id='FDSVerificationComponent' />
        </Feature> -->
        <Feature Id='Fute' Level='1'>
            <ComponentRef Id='FuteComponent' />
            <ComponentRef Id='CommonRender' />
        </Feature>
    </Product>
</Wix>
